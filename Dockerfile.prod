FROM ruby:3.2.2-slim-bullseye

WORKDIR /opt/app

RUN apt-get update \
	&& apt-get install -y \
	build-essential \
	libmagickwand-dev\
	imagemagick \
	&& apt-get clean -y \
	&& rm -rf /var/lib/apt/lists/*

RUN gem install rails -v 7.0.4 \
	&& gem install bundler -v 2.4.12

COPY ./ /opt/app/

ENV BUNDLE_WITHOUT development:test

RUN bundle install

EXPOSE 3000

ENTRYPOINT ["bin/rails", "s", "-e", "production", "-b", "0.0.0.0"]
